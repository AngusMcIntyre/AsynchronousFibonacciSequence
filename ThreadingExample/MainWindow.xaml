<Window x:Class="ThreadingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True" TextElement.FontSize="25">
        <ProgressBar DockPanel.Dock="Top" Height="25" x:Name="ProgressBar_Progress"></ProgressBar>
        <Button x:Name ="Button_Calculate" DockPanel.Dock="Top" Click="Button_Click">Calculate</Button>
        <Button x:Name="Button_Cancel" IsEnabled="False" DockPanel.Dock="Top" Click="Button_Cancel_Click">Cancel</Button>
        <TextBox x:Name="TextBox_Results" TextWrapping="Wrap"></TextBox>
    </DockPanel>
</Window>
